@model Website4.Models.DonHang

@{
    ViewBag.Title = "Edit Order";
    Website4.Models.QlyBanHangEntities db = new Website4.Models.QlyBanHangEntities();
    var chiTietHoaDon = db.ChiTietDonHangs.SingleOrDefault(m => m.IDDonHang == Model.IDDonHang);
    var khachHang = db.KhachHangs.SingleOrDefault(m => m.IDKhachHang == chiTietHoaDon.IDKhachHang);
}

<h2>Edit Your Order</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>DonHang</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IDDonHang)

    <div class="form-group">
        @Html.LabelFor(model => model.NgayDatHang, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NgayDatHang, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NgayDatHang, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tên KH</label>
        <div class="col-md-10">
            <input class="form-control" name="TenKhachHang" value="@khachHang.TenKhachHang" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">SDT KH</label>
        <div class="col-md-10">
            <input class="form-control" name="SoDienThoai" value="@khachHang.SoDienThoai" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ nhận hàng</label>
        <div class="col-md-10">
            <input class="form-control" name="DiaChiNhanHang" value="@khachHang.DiaChiNhanHang" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
